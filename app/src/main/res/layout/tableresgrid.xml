<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blacky"
    android:layout_width="190sp"
    android:layout_height="280sp">



    <androidx.cardview.widget.CardView
        android:id="@+id/clickmen"
        app:cardCornerRadius="30sp"
        android:backgroundTint="@color/yellowssss"
        android:layout_centerInParent="true"
        android:layout_width="150sp"
        android:layout_height="240sp">
        <TextView
            android:visibility="invisible"
            android:id="@+id/tablename"
            android:textColor="@color/blacky"
            android:textSize="21sp"
            android:text="MABO CURRY!"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userid"
            android:textColor="@color/blacky"
            android:textSize="21sp"
            android:text="0"
            android:visibility="invisible"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dateti"
            android:textColor="@color/blacky"
            android:textSize="21sp"
            android:text="0"
            android:visibility="invisible"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/staus"
            android:textColor="@color/blacky"
            android:textSize="42sp"
            android:text="Not available"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="140sp">

                <TextView
                    android:id="@+id/tableid"
                    android:textColor="@color/blacky"
                    android:textSize="100sp"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="#FFED90"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100sp">
                <TextView
                    android:textColor="@color/blacky"
                    android:textSize="41sp"
                    android:text="Table #"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:layout_marginBottom="10sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/blacky"
                android:textSize="21sp"
                android:text="Capacity"
                android:layout_marginLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/capacitus"
                android:textColor="@color/blacky"
                android:textSize="28sp"
                android:text="0"
                android:layout_marginLeft="100sp"
                android:layout_marginBottom="5sp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>