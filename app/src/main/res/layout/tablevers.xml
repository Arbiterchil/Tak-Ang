<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hidenseek"
    android:background="@color/blacky"
    android:layout_width="match_parent"
    android:layout_height="230sp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/clickmen"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:backgroundTint="#FFDD66"
            android:layout_gravity="center"
            android:layout_width="350sp"
            app:cardCornerRadius="30sp"
            android:layout_height="190sp">

            <TextView
                android:id="@+id/tablename"
                android:textColor="@color/blacky"
                android:textSize="21sp"

                android:text="MABO CURRY!"
                android:layout_marginTop="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tableid"
                android:textColor="@color/blacky"
                android:textSize="21sp"
                android:text="MABO CURRY!"
                android:visibility="invisible"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/userid"
                android:textColor="@color/blacky"
                android:textSize="21sp"
                android:text="0"
                android:visibility="invisible"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dateti"
                android:textColor="@color/blacky"
                android:textSize="21sp"
                android:text="0"
                android:visibility="invisible"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="#b8f3ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/staus"
                    android:textColor="@color/blacky"
                    android:textSize="42sp"
                    android:text="Not available"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                android:textColor="@color/blacky"
                android:textSize="21sp"
                android:text="Capacity of"
                android:layout_marginBottom="20sp"
                android:layout_marginLeft="100sp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/capacitus"
                android:textColor="@color/blacky"
                android:textSize="28sp"
                android:text="0"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="220sp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </androidx.cardview.widget.CardView>

    </RelativeLayout>




</LinearLayout>