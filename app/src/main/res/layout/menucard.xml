<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/blacky"
    android:layout_width="match_parent"
    android:layout_height="290sp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/clickme"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:backgroundTint="#FFDD66"
            android:layout_gravity="center"
            android:layout_width="350sp"
            app:cardCornerRadius="30sp"
            android:layout_height="240sp">

            <TextView
                android:visibility="invisible"
                android:hint="0"
                android:id="@+id/idor"
                android:textColor="@color/blacky"
                android:textSize="21sp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/titlemenu"
                android:textColor="@color/blacky"
                android:textSize="21sp"
                android:text="MABO CURRY!"
                android:layout_marginTop="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pricemenu"
                android:textColor="@color/blacky"
                android:layout_marginLeft="60dp"
                android:textSize="32sp"
                android:text="140 Gald"
                android:layout_marginBottom="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginRight="10sp"
                android:layout_gravity="right"
                android:layout_width="160sp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/descip"
                    android:textColor="@color/blacky"
                    android:textSize="18sp"
                    android:text="140 Gald"
                    android:layout_marginTop="120sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/menuimage"
            android:layout_marginLeft="40sp"
            android:layout_width="120sp"
            android:layout_marginTop="50dp"
            android:src="@drawable/noddle"
            android:layout_height="120sp"/>

            <RelativeLayout
                android:background="@color/yellowssss"
                android:layout_width="30sp"
                android:layout_height="match_parent">

            </RelativeLayout>

            <Spinner
                android:id="@+id/dickbutt"
                android:textAlignment="center"
                android:outlineSpotShadowColor="@color/yellowssss"
                android:background="@drawable/spinround"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="190sp"
                android:layout_width="100sp"
                android:layout_height="40sp"/>
            <TextView
                android:id="@+id/category"
                android:paddingRight="5sp"
                android:paddingLeft="5sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:background="@drawable/spinround"
                android:layout_marginRight="40sp"
                android:layout_marginTop="195sp"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:text="category name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </androidx.cardview.widget.CardView>

    </RelativeLayout>




</LinearLayout>