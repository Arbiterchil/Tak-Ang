<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/baseBackgroundColor"
    tools:context=".results">

    <TextView
        android:visibility="invisible"
        android:id="@+id/totalseen"
        android:layout_marginBottom="30sp"
        android:background="@drawable/spinround"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="190sp"
        android:textColor="@color/Black"
        android:layout_height="60sp"/>

  <LinearLayout
      android:background="@color/pinky"
      android:layout_width="match_parent"
      android:layout_height="60sp">


    <TextView
        android:id="@+id/orderid"
        android:layout_marginTop="10sp"
       android:layout_marginLeft="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tabs"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


  </LinearLayout>

  <Button
      android:id="@+id/b"
      android:layout_marginTop="5sp"
      android:textColor="@color/blacky"
      android:text="Ready to Purchase"
      android:layout_marginBottom="5sp"
      android:layout_centerInParent="true"
      android:layout_alignParentTop="true"
      android:background="@drawable/eoundbutton"
      android:layout_width="180sp"
      android:layout_height="50sp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/temlist"
        android:layout_marginTop="70sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</RelativeLayout>