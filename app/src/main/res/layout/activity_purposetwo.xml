<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/blacky"
    tools:context=".results">


    <LinearLayout
        android:background="@color/yellowssss"
        android:layout_width="match_parent"
        android:layout_height="80sp">

        <TextView
            android:visibility="invisible"
            android:id="@+id/chefID"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/identi"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="invisible"
            android:id="@+id/orgy"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/stastu"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cheflist"
        android:layout_marginTop="90sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/serveme"
        android:text="READY TO SERVE"
        android:layout_marginBottom="40sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:background="@color/fbutton_default_shadow_color"
        android:layout_width="180sp"
        android:layout_height="60sp"/>

    <Button
        android:id="@+id/readyass"
        android:text="READY TO SERVE"
        android:layout_marginBottom="40sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:background="@color/fbutton_default_shadow_color"
        android:layout_width="180sp"
        android:layout_height="60sp"/>

    <Button
        android:id="@+id/process"
        android:text="PROCESSING COOK"
        android:layout_marginBottom="40sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:background="@color/fbutton_default_shadow_color"
        android:layout_width="180sp"
        android:layout_height="60sp"/>

</RelativeLayout>